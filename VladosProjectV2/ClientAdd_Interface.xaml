        <TextBox x:Name="txtMiddle_name_toAdd" Margin="180,75,7,0" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtPhone_number_toAdd" Margin="180,105,7,0" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtManager_toAdd" Margin="180,135,7,0" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtComment_toAdd" Margin="180,165,7,0" TextWrapping="Wrap" FontSize="16" Height="160" VerticalAlignment="Top"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Отчество" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" FontSize="16"/>
