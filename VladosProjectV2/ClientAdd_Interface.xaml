        <Label Content="Ведущий менеджер" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Комментарий&#xD;&#xA;специалиста" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" FontSize="16" Height="55"/>
        <Button x:Name="btnClientAdd" Content="Сохранить" HorizontalAlignment="Left" Margin="12,216,0,0" VerticalAlignment="Top" Height="42" Width="91" Click="btnClientAdd_Click"/>

    </Grid>
</Window>
